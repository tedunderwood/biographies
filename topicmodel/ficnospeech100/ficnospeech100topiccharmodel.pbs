#!/bin/bash
#PBS -l walltime=24:00:00
#PBS -l nodes=1:ppn=20
#PBS -N ficnospeech100topic
#PBS -q ichass
#PBS -m be
cd $PBS_O_WORKDIR
module load java/1.8
bin/mallet train-topics --input ../code/chartopics/data/ficnospeech.mallet --num-threads 18 --num-topics 100 --num-iterations 2500 --num-top-words 80 --random-seed 99 --optimize-interval 25 --optimize-burn-in 150 --output-state ../code/chartopics/ficnospeech100/modelstate.gz --output-doc-topics ../code/chartopics/ficnospeech100/ficnospeech100_doctopics.txt --output-topic-keys ../code/chartopics/ficnospeech100/ficnospeech100_keys.txt --inferencer-filename ../code/chartopics/ficnospeech100/inferencer.bin --show-topics-interval 200
